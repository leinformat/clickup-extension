{
  "manifest_version": 3,
  "name": "Extension de Clickup",
  "version": "1.0",
  "description": "Una extensi√≥n para llevar un control  de las tareas asignadas y sus estados en clickup",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "./images/otf-logo.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "tabs",
    "webNavigation",
    "contextMenus",
    "scripting",
    "offscreen"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions":[
    "<all_urls>"
  ],
  "icons": {
    "16": "./images/otf-logo.png",
    "48": "./images/otf-logo.png",
    "128": "./images/otf-logo.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["./plugins/sweetalert/sweetalert2.min.css","./css/general.css"],
      "js": ["./plugins/sweetalert/sweetalert2.all.min.js","content-script.js"],
      "run_at": "document_idle"
    
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["audio/tarea-actualizada.mp3"],
      "matches": [ "<all_urls>" ],
      "run_at": "document_idle"
    }
  ]
}